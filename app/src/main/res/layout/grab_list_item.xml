<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">
	    <TextView
		    android:id="@+id/class_text_view"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:layout_alignParentTop="true"
		    android:padding="4dp"
		    android:textSize="16sp"
		    android:text="月嫂"/>
        <RelativeLayout
	        android:id="@+id/account_info"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingTop="2dp"
	        android:paddingBottom="2dp">
	        <ImageView
		        android:id="@+id/icon_account"
		        android:layout_width="32dp"
		        android:layout_height="32dp"
		        android:src="@drawable/ic_account"/>
	        <TextView
		        android:id="@+id/account_text_view"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerVertical="true"
		        android:layout_toRightOf="@id/icon_account"
		        android:layout_marginLeft="8dp"
		        android:text="房建猷"/>
        </RelativeLayout>
	    <RelativeLayout
		    android:id="@+id/time_info"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@id/account_info"
		    android:paddingTop="2dp"
		    android:paddingBottom="2dp">
		    <ImageView
			    android:id="@+id/icon_time"
			    android:layout_width="32dp"
			    android:layout_height="32dp"
			    android:src="@drawable/ic_clock"/>
		    <TextView
			    android:id="@+id/time_text_view"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_centerVertical="true"
			    android:layout_toRightOf="@id/icon_time"
			    android:layout_marginLeft="8dp"
			    android:text="2015-10-25 10:00:00"/>
	    </RelativeLayout>
	    <RelativeLayout
		    android:id="@+id/money_info"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@id/time_info"
		    android:paddingTop="2dp"
		    android:paddingBottom="2dp">
		    <ImageView
			    android:id="@+id/icon_money"
			    android:layout_width="32dp"
			    android:layout_height="32dp"
			    android:src="@drawable/ic_money"/>
		    <TextView
			    android:id="@+id/money_text_view"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_centerVertical="true"
			    android:layout_toRightOf="@id/icon_money"
			    android:layout_marginLeft="8dp"
			    android:text="100元"/>
	    </RelativeLayout>
	    <RelativeLayout
		    android:id="@+id/contact_layout"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@id/money_info"
		    android:layout_marginTop="12dp"
		    android:paddingTop="6dp"
		    android:paddingBottom="6dp"
		    android:paddingLeft="2dp"
		    android:background="@drawable/card_foreground">
			<TextView
				android:id="@+id/contact_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textStyle="bold"
				android:textSize="12sp"
				android:textColor="@color/colorBlue"
				android:text="联系电话"/>
		    <TextView
			    android:id="@+id/contact_text_view"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_below="@id/contact_title"
			    android:layout_marginTop="4dp"
			    android:textSize="17sp"
			    android:text="15640364156"/>
		    <ImageView
			    android:layout_width="36dp"
			    android:layout_height="36dp"
			    android:layout_alignParentRight="true"
			    android:layout_centerVertical="true"
			    android:padding="4dp"
			    android:src="@drawable/ic_call"
			    android:scaleType="fitEnd"/>
	    </RelativeLayout>
	    <RelativeLayout
		    android:id="@+id/address_layout"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@id/contact_layout"
		    android:paddingTop="6dp"
		    android:paddingBottom="6dp"
		    android:paddingLeft="2dp"
		    android:clickable="true"
		    android:background="@drawable/card_foreground">
		    <TextView
			    android:id="@+id/address_title"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textStyle="bold"
			    android:textSize="12sp"
			    android:textColor="@color/colorBlue"
			    android:text="详细地址"/>
		    <TextView
			    android:id="@+id/address_text_view"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_below="@id/address_title"
			    android:layout_marginTop="4dp"
			    android:textSize="17sp"
			    android:text="辽宁省沈阳市东北大学"/>
	    </RelativeLayout>
	    <RelativeLayout
		    android:id="@+id/remark_layout"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@id/address_layout"
		    android:paddingTop="6dp"
		    android:paddingBottom="6dp"
		    android:paddingLeft="2dp"
		    android:clickable="true"
		    android:background="@drawable/card_foreground">
		    <TextView
			    android:id="@+id/remark_title"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textStyle="bold"
			    android:textSize="12sp"
			    android:textColor="@color/colorBlue"
			    android:text="备注"/>
		    <TextView
			    android:id="@+id/remark_text_view"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_below="@id/remark_title"
			    android:layout_marginTop="4dp"
			    android:textSize="17sp"
			    android:text="无备注内容"/>
	    </RelativeLayout>
	    <Button
		    android:id="@+id/grab_button"
		    android:layout_width="match_parent"
		    android:layout_height="48dp"
		    android:layout_below="@id/remark_layout"
		    android:layout_marginTop="8dp"
		    style="@style/AppTheme.Button.Blue.Borderless"
		    android:textStyle="bold"
		    android:textSize="18sp"
		    android:text="抢单"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>